<section class="entry-element entry-images">
  {% set title = (element.title or '') | trim %}
  {% if title and title | lower != 'images' %}
    <h3>{{ title }}</h3>
  {% endif %}
  <div class="image-stack">
    {% for item in element["items"] %}
      {% set alignment = 'image-card-left' if loop.index0 % 2 == 0 else 'image-card-right' %}
      <figure class="image-card {{ alignment }}">
        <img src="{{ item.src }}" alt="{{ item.alt }}">
        <figcaption>
          <span class="caption-title">{{ item.label }}</span>
          {% if item.description %}
            <div class="caption-desc">{{ item.description | safe }}</div>
          {% endif %}
        </figcaption>
      </figure>
    {% endfor %}
  </div>
</section>
